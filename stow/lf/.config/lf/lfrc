# Basic vars
set shellopts '-eu'
set ifs "\n"
# leave some space at the top and the bottom of the screen
set scrolloff 10
set icons
set period 1
set hidden!
set hiddenfiles ".*:*.aux:*.log:*.bbl:*.bcf:*.blg:*.run.xml"
#set cleaner '~/.config/lf/cleaner'
#set previewer '~/.config/lf/scope'
set autoquit true
set drawbox true
set ignorecase true
# set size of panes
set ratios 2:3:4
set incsearch
#ignores diacritics such as accents while searching. Therefore, /épo will match the file dépotoire
set ignoredia
set truncatechar "…"

set timefmt "02.01.2006 15:04:05 "
set dircounts
set previewer '~/.config/lf/previewer'
set cleaner '~/.config/lf/cleaner'
source ~/.config/lf/lffunctions
#source ~/.config/lf/opener

%test $LF_LEVEL -eq 1 || >&2 printf "Warning: You're in a nested lf instance!"

map a push :mkdir<space>
#map <c-n> push :mkdir<space>
#map <c-t> push $touch<space>
map <c-t> push $touch<space>
map <c-r> reload
#map <c-s> set hidden!
# put lf into backgound, fg for return
map <c-z> $ kill -STOP $PPID
# use enter for shell commands
map <enter> shell

# execute current file (must be executable)
map x $$f
map X !$f
map o &mimeopen "$f"
map O $mimeopen --ask "$f"
map E extract
map <a-d> trash # instead of delete
#map d trash
map D delete
#map <a-r> trash-restore
map r trash-restore
map Y copyto
map M moveto
map o &mimeopen "$f"
map O $mimeopen --ask "$f"
# mount for archive
map T &lfmount $f
map . set hidden!
map c edit-config
map C compress
map L test
# "soft" rename without forced overwrite
map i rename %sh -c 'mv -i $f $0'
# Movement
#map gl follow_link
map f ${{
    selected="$(fzf)"
    [ -d "$selected" ] && cmd=cd || cmd=select
    lf -remote "send $id $cmd '$selected'"
}}

map w drag-and-drop
